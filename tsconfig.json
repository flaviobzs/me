{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "jsx": "preserve",
    "lib": ["dom", "esnext", "es2015", "es2017"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "src/styles/global.js"],
  "files": ["src/@types/styled.d.ts"]
}
